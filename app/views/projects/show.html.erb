<div id="breadcrambs">
  <div class="container">
    <ol class="breadcrumb">
      <li><%= link_to 'Главная', root_path %></li>
      <li><%= link_to 'Проекты', projects_path %></li>
      <li><%= link_to @project.title, project_path(@project) %></li>
    </ol>
  </div>
</div>
<%= flash_messages %>
<div class="container">
  <div class="row">
    <div class="col-md-8 project">
      <h1><%= @project.title %></h1>
      <hr>
      <p class="text-muted">Дата мероприятия: <%= @project.start_datetime %></p>
      <hr>
      <% if @project.preview_img.attached? %>
        <%= image_tag @project.thumbnail, class: "img-responsive project_img_top box-shadow img-rounded", style: "width: 100%" %>
      <% end %>
      <!--<img class="" src="img/750x484.png" style="width: 100%;" alt="">-->
      <%= @project.description.html_safe %>
      <hr>
      <div class="btn-group">
        <%= link_to 'Show', @project, class: "btn btn-sm btn-outline-danger" %>
        <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Projects</h4>
        </div>
        <div class="panel-body">
          <ul class="list-inline">
            <% @recommended_projects.each do |project| %>
              <li>
                <%= link_to project do %>
                  <h4><%= project.title %></h4>
                  <p class="text-muted">Дата мероприятия: <%= project.start_datetime %></p>

                  <p class="list-group-item-text">
                    <%= strip_tags(project.preview)%>
                  </p>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  </div>
  <%= link_to 'Back', projects_path, class: "btn btn-sm btn-outline-secondary" %>
</div>