<%= form_with(model: project, local: true, class: "form-horizontal" ) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :preview_img, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.file_field :preview_img %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :start_datetime, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :start_datetime, id: 'datetimepicker1', class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= form.label :title, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_field :title, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= form.label :preview, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.cktext_area :preview, ckeditor: { language: 'ru'} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.cktext_area :description, ckeditor: { language: 'ru'} %>
      </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 action">
    <%= form.submit 'Save Project', class: 'btn btn-default'  %>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $(document).ready(function() {
    $(function () {
      $('#datetimepicker1').datetimepicker({
        format: "YYYY-MM-DD HH:mm"
      });
    });
  });
</script>