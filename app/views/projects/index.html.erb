<div id="breadcrambs">
  <div class="container">
    <ol class="breadcrumb">
      <li><%= link_to 'Главная', root_path %></li>
      <li><%= link_to 'Проекты', projects_path %></li>
    </ol>
  </div>
</div>
<%= flash_messages %>
<div class="container projects_list">
    <% @projects.each do |project| %>
    <div class="row">
      <div class="col-md-7">
        <% if project.preview_img.attached? %>
          <%= image_tag project.thumbnail, class: "img-responsive", style: "padding-top:20px;" %>
        <% end %>
      </div>
      <div class="col-md-5">
        <h3><%= project.title %></h3>
        <p class="text-muted">Дата мероприятия: <%= project.start_datetime %></p>
        <section style="height: 170px; overflow: hidden;">
          <%= project.preview.html_safe %>
        </section>
        <div class="btn-group">
          <%= link_to 'Show', project, class: "btn btn-sm btn-outline-danger" %>
          <%= link_to 'Edit', edit_project_path(project), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
  <%= link_to 'New Project', new_project_path, class: "btn btn-sm btn-outline-danger" %>
</div>
