<%= render partial: 'shared/headerwrap' %>

<%= flash_messages %>

<div class="container">
  <%= render partial: 'contacts/contact_info' %>

  <div class="col-md-6 col-xs-12">
    <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <div class="field form-group">
        <%= f.label :name, t('contacts.name') %>
        <%= f.text_field :name, :required => true, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :email, t('contacts.email') %>
        <%= f.email_field :email, :required => true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :message, t('contacts.message') %>
        <%= f.text_area :message, :as => :text, :required => true, class: "form-control" %>
      </div>

      <div class= "hidden">
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div class="field form-group">
        <%= f.submit 'Send message', :class=> "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>