<%= form_with(model: service, local: true, class: "form-horizontal" ) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :preview, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :preview, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.cktext_area :description, ckeditor: { language: 'ru'} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :preview_img, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.file_field :preview_img %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 action">
    <%= form.submit 'Save Service', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
