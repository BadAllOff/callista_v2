<%= form_with(model: service, local: true, class: "form-horizontal" ) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.template.header', model: Service.model_name.human, count: service.errors.count) %></h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :preview, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :preview, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.cktext_area :description, ckeditor: { language: I18n.locale, rows: 20} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :preview_img, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.file_field :preview_img, class: "filestyle", data: {input: "false", badge: 'true', buttonText: "#{t('shared.upload_file')}"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 action">
    <%= form.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
