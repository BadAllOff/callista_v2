<%= flash_messages %>
<div class="container services_list">
  <%= link_to 'New Service', new_service_path, class: "btn btn-lg btn-outline-danger" %>
  <hr>
  <div class="row">
    <% @services.each do |service| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <%= service_preview_img_thumbnail(service) %>

          <div class="card-body">
            <p class="card-text" style="height: 84px; overflow: hidden"><%= service.preview %></p>
            <div class="centered">
              <div class="btn-group">
                <%= link_to 'View service', service, class: "btn btn-sm btn-outline-danger" %>
                <%= link_to 'Edit', edit_service_path(service), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Delete', service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

