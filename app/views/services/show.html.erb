<% title @service_decorator.title %>
<div id="breadcrambs">
  <div class="container">
    <ol class="breadcrumb">
      <li><%= link_to t('navigation.breadcrambs.main'), root_path %></li>
      <li><%= link_to t('navigation.breadcrambs.services'), services_path %></li>
      <li><%= link_to @service_decorator.title, service_path(@service_decorator.id) %></li>
    </ol>
  </div>
</div>

<div class="container service">
  <div class="row">
    <div class="col-md-8 article">
      <h1><%= @service_decorator.title %></h1>
      <hr>
      <%= @service_decorator.main_image_header_variant %>
      <div class="card-text">
        <%= @service.description.html_safe %>
      </div>
      <hr>
      <div class="btn-group">
        <%= link_to t('shared.back'), services_path, class: "btn btn-sm btn-outline-secondary" %>
        <%= @service_decorator.link_to_edit %>
        <%= @service_decorator.link_to_destroy %>
        <%= link_to t('services.new.add_service'), new_service_path, class: "btn btn-sm btn-outline-danger" if user_signed_in? %>
      </div>
    </div>

    <aside class="col-md-4 service_sidebar">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4><%= t('services.sidebar_header') %></h4>
        </div>
        <div class="panel-body">
          <ul class="list-unstyled">
            <% @recommended_services_decorators.each do |recommended_service_decorator| %>
              <li>
                <%= link_to service_path(recommended_service_decorator.id) do %>
                  <h4><%= recommended_service_decorator.title %></h4>
                  <%= recommended_service_decorator.service_preview_img_thumbnail %>
                  <p class="list-group-item-text">
                    <%= recommended_service_decorator.preview %>
                  </p>
                  <hr>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </aside>

  </div>
</div>